<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/chef_image"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/invoices_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="13dp"
        android:layout_marginTop="13dp"
        android:background="#cccccc"/>


    <RelativeLayout
        android:id="@+id/my_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/ic_profile" />


        <TextView

            android:id="@+id/my_order_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/profile_icon"
            android:layout_toRightOf="@+id/profile_icon"
            android:paddingLeft="10dp"
            android:text="My Account"
            android:textColor="#808080"
            android:textSize="16sp" />


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/my_order_textview"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_right_arrow" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/profile_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_marginTop="13dp"
            android:background="#cccccc">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/orders_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_orders" />


        <TextView

            android:id="@+id/profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view1"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/orders_icon"
            android:layout_toRightOf="@+id/orders_icon"
            android:paddingLeft="10dp"
            android:text="My Orders"
            android:textColor="#808080"
            android:textSize="16sp" />


        <ImageView

            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_right_arrow" />


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/orders_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_marginTop="13dp"
            android:background="#cccccc">

        </View>
    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/my_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/invoices_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_invoices_icon" />


        <TextView

            android:id="@+id/invoice_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view2"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/invoices_icon"
            android:layout_toRightOf="@+id/invoices_icon"
            android:paddingLeft="10dp"
            android:text="My Invoices"
            android:textColor="#808080"
            android:textSize="16sp" />


        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_right_arrow" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/invoices_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_marginTop="13dp"
            android:background="#cccccc">

        </View>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/my_favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/favourites_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_favourites" />


        <TextView

            android:id="@+id/favourites_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view3"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/favourites_icon"
            android:layout_toRightOf="@+id/favourites_icon"
            android:paddingLeft="10dp"
            android:text="My Favourites"
            android:textColor="#808080"
            android:textSize="16sp" />


        <ImageView

            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_right_arrow" />


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/favourites_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_marginTop="13dp"
            android:background="#cccccc">

        </View>
    </RelativeLayout>

</LinearLayout>